<html>
    <head>
        <title>  </title>
        <script src="@Url.Content("~/js/jquery-1.10.2.min.js")" type="text/javascript"></script>
        <script type="text/javascript" src="@Url.Content("~/js/jquery.cookie.js")"></script>
        <script src="@Url.Content("~/js/common.js")"></script>
        <script src="@Url.Content("~/js/Index.js")"></script>
        <link href="@Url.Content("~/css/Index.css")" type="text/css" rel="stylesheet" />
    </head>
<body>
    <table width="100%" height="100%">
        <tr>
            <td align="center" valign="middle">
                <div id="main">
                    <div id="login" class="loginbox" align="center">
                        <form id="menuPost" name="menuPost" method="post">
                            <input type="hidden" name="Lang" id="Lang" />
                        </form>
                        <form id="loginPost" name="loginPost" method="post" action="/Web/Login">
                            <table width="400px">
                                <thead>
                                    <tr>
                                        <td height="50px">@RazorApi.Instance().DisplayView(ViewBag, "Title")</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr><td style="height:10px;"><hr /></td></tr>
                                    <tr>
                                        <td align="center" style="font-size:0.8em;color:red;">
                                            @ViewBag.ErrorMsg
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="center" style="height:40px;">
                                            @{
                                                var IDBuffer = "";
                                                if (ViewBag.IdBuffer != null && ViewBag.IdBuffer != "")
                                                {
                                                    IDBuffer = ViewBag.IdBuffer;
                                                }
                                                else
                                                {
                                                    IDBuffer = RazorApi.Instance().DisplayView(ViewBag, "ID");
                                                }
                                            }
                                            <input type="text" class="textbox" name="userid" id="userid" value="@IDBuffer"
                                                   onfocus="this.value = '';"
                                                   onblur="if (this.value == '') { this.value = '@RazorApi.Instance().DisplayView(ViewBag,"ID")'; }"
                                                   onkeypress="if (event.keyCode == 13) { LoginSubmit(); }">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="center" style="height:40px;">
                                            <input type="password" class="textbox" name="password" id="password" value="@RazorApi.Instance().DisplayView(ViewBag, "PW")"
                                                   onfocus="this.value = '';"
                                                   onblur="if (this.value == '') { this.value = '@RazorApi.Instance().DisplayView(ViewBag, "PW")'; }"
                                                   onkeypress="if (event.keyCode == 13) { LoginSubmit(); }" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="center" style="height:40px;">
                                            <input type="button" class="button" value="@RazorApi.Instance().DisplayView(ViewBag, "Button")" onclick="LoginSubmit();" />
                                        </td>
                                    </tr>
                                    <tr><td style="height:10px;"><hr /></td></tr>
                                    <tr>
                                        <td align="center">
                                            <a href="#" onclick="LangChange('j')">Japanese</a>&nbsp;&nbsp;&nbsp;<a href="#" onclick="    LangChange('k')">Korean</a>
                                        </td>
                                    </tr>
                                    <tr><td style="height:10px;"><hr /></td></tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td height="20px">@RazorApi.Instance().DisplayView(ViewBag, "Company")</td>
                                    </tr>
                                </tfoot>
                            </table>
                            <input type="hidden" name="SessionID" id="SessionID" value="@ViewBag.SessionID" />
                        </form>

                    </div>
                </div>
            </td>
        </tr>
    </table>
</body>
</html>
