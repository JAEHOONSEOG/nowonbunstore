        <table align="center" style="border-color:#000;">
            <thead>
                <tr style="height:30px;" class="nList">
                    <th style="width: 280px;text-align:center;">USERID</th>
                    <th style="width: 100px; text-align: center;">CONNECTDATE</th>
                    <th style="width: 100px; text-align: center;">IPADDRESS</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pBuffer in ViewBag.list)
                {
                    <tr class="mList2">
                        <td>@pBuffer.userid</td>
                        <td>@pBuffer.connectdate</td>
                        <td>@pBuffer.ipaddress</td>
                    </tr>
                }
                @if (ViewBag.listcount == 0)
                {
                    <tr>
                        <td colspan="3" height="100px" align="center" style="font-size:0.9em;height:200px;">@RazorApi.Instance().DisplayView(ViewBag, "NotSearch", "검색없음")</td>
                    </tr>
                }
            </tbody>
        </table>
