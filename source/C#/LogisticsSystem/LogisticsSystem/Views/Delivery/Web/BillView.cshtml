<script src="@Url.Content("~/js/delivery.js")"></script>
<link href="@Url.Content("~/css/delivery.css")" type="text/css" rel="stylesheet" />
<div id="Apply" class="Apply">
    <table style="width:70%;" align="center">
        <tr>
            <td colspan="2" style="height: 30px; background-color: #5976D4; text-align: center; font-size: 1.2em; color: white; ">
                @RazorApi.Instance().DisplayView(ViewBag, "BillView")
            </td>
        </tr>
        <tr>
            <td colspan="2"></td>
        </tr>
    </table>
    <table style="border-style:solid;width:70%;box-shadow: 5px 5px 5px 5px;border-color:#000;" align="center">
        <thead>
            <tr>
                <td colspan="2" align="center" style="font-size:1.5em;height:50px;">
                    <div style="margin-top:30px;">
                        @RazorApi.Instance().DisplayView(ViewBag, "BillTitle")
                    </div>
                </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="width:50%">
                    <table style="margin-left:20px;">
                        <tr style="height:30px;">
                            <td style="font-size:0.8em;width:20px;text-align:center;" valign="middle"></td>
                            <td style="font-size: 0.8em; width: 150px; ">@ViewBag.bill.orderpost</td>
                        </tr>
                        <tr style="height:30px;">
                            <td style="font-size:0.8em;width:20px;text-align:center;" valign="middle"></td>
                            <td style="font-size: 0.8em; width: 250px; ">@ViewBag.bill.orderaddress</td>
                        </tr>
                        <tr style="height:30px;">
                            <td style="font-size:0.8em;width:20px;text-align:center;" valign="middle"></td>
                            <td style="font-size: 0.8em; width: 250px; " align="right">@ViewBag.bill.ordercompany &nbsp;@RazorApi.Instance().DisplayView(ViewBag, "OrderCompany")</td>
                        </tr>


                    </table>
                </td>
                <td style="width:50%" align="right">
                    <table style="margin-right:40px;">
                        <tr style="height:30px;">
                            <td style="font-size:0.8em;width:80px;text-align:center;" valign="middle">@RazorApi.Instance().DisplayView(ViewBag, "Billdate", "청구일")</td>
                            <td style="font-size: 0.8em; width: 200px;">@ViewBag.bill.billdateString</td>
                        </tr>
                        <tr style="height:30px;">
                            <td style="font-size: 0.8em; width: 80px; text-align: center;" valign="middle">@RazorApi.Instance().DisplayView(ViewBag, "DeliveryCompany", "납품사")</td>
                            <td style="font-size: 0.8em; width: 200px;">@ViewBag.bill.inordercompany</td>
                        </tr>
                        <tr style="height:30px;">
                            <td style="font-size: 0.8em; width: 80px; text-align: center;" valign="middle">@RazorApi.Instance().DisplayView(ViewBag, "DeliveryRepresentative", "대표자")</td>
                            <td style="font-size: 0.8em; width: 200px;">@ViewBag.bill.inorderrepresentative</td>
                        </tr>
                        <tr style="height:30px;">
                            <td style="font-size: 0.8em; width: 80px; text-align: center;" valign="middle">@RazorApi.Instance().DisplayView(ViewBag, "DeliveryAddress", "주소")</td>
                            <td style="font-size: 0.8em; width: 200px;">@ViewBag.bill.inorderAddress</td>
                        </tr>
                        <tr style="height:30px;">
                            <td style="font-size: 0.8em; width: 80px; text-align: center;" valign="middle">@RazorApi.Instance().DisplayView(ViewBag, "Deliverytel", "전화번호")</td>
                            <td style="font-size: 0.8em; width: 200px;"></td>
                        </tr>
                        <tr style="height:30px;">
                            <td style="font-size: 0.8em; width: 80px; text-align: center;" valign="middle">@RazorApi.Instance().DisplayView(ViewBag, "Deliveryfax", "팩스")</td>
                            <td style="font-size: 0.8em; width: 200px;"></td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td colspan="2"><hr /></td>
            </tr>
            <tr>
                <td colspan="2" align="center" >
                    <table style="width:70%;">
                        <tr><td colspan="2">&nbsp;</td></tr>
                        <tr><td colspan="2" style="font-size: 0.9em;" align="center">@RazorApi.Instance().DisplayView(ViewBag, "Comment", "코맨트")</td></tr>
                        <tr><td colspan="2">&nbsp;</td></tr>
                        <tr>
                            <td style="font-size: 0.9em;width:50%;" align="center">@RazorApi.Instance().DisplayView(ViewBag, "SubMoney", "금액") &nbsp;&nbsp;@ViewBag.bill.billmoney.ToString("###,##0")</td>
                            <td style="font-size: 0.9em; width: 50%;" align="center">@RazorApi.Instance().DisplayView(ViewBag, "SubVat", "세금") &nbsp;&nbsp;@ViewBag.bill.billtax.ToString("###,##0")</td>
                        </tr>
                        <tr><td colspan="2">&nbsp;</td></tr>
                        <tr><td colspan="2" style="font-size: 0.9em;" align="center">@RazorApi.Instance().DisplayView(ViewBag, "SubTotal", "총금액") &nbsp;&nbsp;@ViewBag.bill.billtotal.ToString("###,##0")</td></tr>
                        <tr><td colspan="2">&nbsp;</td></tr>
                    </table>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2" align="center" style="height:30px;" valign="bottom">
                    <hr />
                    <input type="button" value="@RazorApi.Instance().DisplayView(ViewBag, "Return")" class="btn" style="width:30%" onclick="returnPage(4)" />&nbsp;
                    <input type="button" value="@RazorApi.Instance().DisplayView(ViewBag, "PrintPdf")" class="btn" style="width:30%" onclick="" />
                    <input type="button" value="@RazorApi.Instance().DisplayView(ViewBag, "PrintMail")" class="btn" style="width:30%" onclick="" />
                </td>
            </tr>
        </tfoot>
    </table>
</div>