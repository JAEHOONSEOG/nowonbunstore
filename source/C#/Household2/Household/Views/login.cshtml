@using Household.Common;
@{
    Layout = "~/Views/master.cshtml";
}
<link rel="stylesheet" href="@Url.Content("~/css/login.css")">
<style>
    h3.title {
        font-size: 22px !important;
    }
</style>
<div class="container">
    <form class="form-signin" method="get" action="https://accounts.google.com/o/oauth2/auth">
        <div class="login-box">
            <h3 class="form-signin-heading title">HOUSEHOLD LEDGER</h3>
            <input type="hidden" name="scope" value="https://www.googleapis.com/auth/userinfo.profile" />
            <input type="hidden" name="client_id" value="@Html.Raw(HtmlUtil.GetClientID())" />
            <input type="hidden" name="redirect_uri" value="http://localhost:1212/Home/Redirect" />
            <input type="hidden" name="access_type" value="offline" />
            <input type="hidden" name="response_type" value="code" />
            <input type="hidden" name="approval_prompt" value="force" />
            <input type="image" src="/login.png">
        </div>
    </form>
</div>
